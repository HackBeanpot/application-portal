{
  "name": "application-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:db:up": "docker-compose -p application-portal -f infrastructure/dev/docker-compose.yaml --env-file .env up -d",
    "dev:db:down": "docker-compose -p application-portal -f infrastructure/dev/docker-compose.yaml --env-file .env down",
    "dev:db:reset": "echo delete the ./infrastructure/dev/mongo-data directory manually",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "test:unit": "jest tests",
    "test:integration": "cypress run --browser chrome",
    "test:dev": "cypress open"
  },
  "dependencies": {
    "@next-auth/mongodb-adapter": "0.0.2-next.281",
    "@rollbar/react": "^0.8.0",
    "antd": "^4.18.2",
    "axios": "^0.21.1",
    "file-saver": "^2.0.5",
    "joi": "^17.4.2",
    "mongodb": "^4.1.2",
    "next": "^11.0.1",
    "next-auth": "4.0.0-beta.4",
    "nodemailer": "^6.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollbar": "^2.24.0",
    "sass": "^1.42.1",
    "swr": "^1.1.2-beta.0"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.4",
    "@types/jest": "^27.0.1",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "cypress": "^9.2.0",
    "eslint": "^7.30.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "husky": ">=6",
    "jest": "^27.2.5",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.3.5",
    "ts-node": "^10.9.1",
    "jest-environment-jsdom": "^27.0.1",
    "identity-obj-proxy": "^3.0.0",
    "babel-jest": "^29.1.2",
    "@testing-library/react": "12.1.2",
    "@testing-library/jest-dom": "^5.16.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "skipLibCheck": true,
          "strict": true,
          "noEmit": true,
          "esModuleInterop": true,
          "module": "esnext",
          "moduleResolution": "node",
          "resolveJsonModule": true,
          "isolatedModules": true,
          "jsx": "react-jsx"
        }
      }
    }
  }
}
